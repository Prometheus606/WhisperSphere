<%- include("./partials/header") %>

<h1>Whisper Sphere</h1>

<div class="container">
    <div class="join-container">
        <h2>Join Room</h2>
        <% if (locals.error) { %>
            <p class="error-text"><%= error %></p>
        <% } %>

        <form action="/auth/login" method="post" class="form">
            <input type="text" name="userName" id="userName" placeholder="Enter nickname" required class="text-input"><br><br>
            <input type="number" name="roomID" id="roomID" placeholder="Enter room ID" required class="text-input"><br><br>
            <input type="password" name="password" id="password" placeholder="Enter Password" required class="text-input"><br><br>
            <input type="submit" name="submit" id="submit" value="Join" class="btn">
        </form>
    </div>
    
    <div class="create-container">
        <h2>Create Room</h2>
        <form action="/auth/register" method="post" class="form">
            <input type="password" name="password" id="password" placeholder="Enter Password" class="text-input"><br><br>
            <input type="submit" name="submit" id="submit" value="Create" class="btn">
        </form>
    </div>

</div>


</body>
</html>